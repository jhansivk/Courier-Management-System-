7.class TrackingHistory {
    public static void main(String[] args) {
        String[] trackingHistory = {
                "Dispatched from Warehouse",
                "Arrived at City Hub",
                "Out for Delivery",
                "Delivered to Customer"
        };

        System.out.println("Parcel Tracking History:");
        for (int i = 0; i < trackingHistory.length; i++) {
            System.out.println((i + 1) + ". " + trackingHistory[i]);
        }
    }
}
8.class Courier {
    public static void main(String[] args) {
        String[] couriers = {"Courier A", "Courier B", "Courier C", "Courier D"};
        int[] distances = {10, 3, 7, 5}; 

        int minIndex = 0;
        for (int i = 1; i < distances.length; i++) {
            if (distances[i] < distances[minIndex]) {
                minIndex = i;
            }
        }

        System.out.println("Nearest available courier: " + couriers[minIndex] + " (Distance: " + distances[minIndex] + " km)");
    }
}
